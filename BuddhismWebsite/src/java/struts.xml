<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="WebInfoPath" class="com.stockvote.interceptor.WebInfointerceptor"></interceptor>

                    <interceptor-stack name="defaultStack1">
                    <!--interceptor-ref name="log"></interceptor-ref!-->
                    <interceptor-ref name="defaultStack"></interceptor-ref>
                    <interceptor-ref name="WebInfoPath"></interceptor-ref>

                    </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="defaultStack1"></default-interceptor-ref>
        
        <action name="logIn" class="logAction">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="INPUT">/WEB-INF/jsp/logIn.jsp</result>
        </action>
        <action name="managementAction" class="manage" method="nextPage">
            <result name="SUCCESS" type="redirect">/WEB-INF/jsp/management.jsp</result>
        </action>
        <action name="managementAction" class="manage" method="previousPage">
            <result name="SUCCESS" type="redirect">/WEB-INF/jsp/management.jsp</result>
        </action>
        <action name="managementAction" class="manage">
            <result name="SUCCESS">/WEB-INF/jsp/management.jsp</result>
        </action>
        <action name="newPage" class="newArticle">
            <result name="SUCCESS">/WEB-INF/jsp/newArticle.jsp</result>
        </action>    
        <action name="articleAction" class="article">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="CANCEL"  type="redirect">managementAction.action</result>
        </action> 
        <action name="register" class="register">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="CANCEL"  type="redirect">managementAction.action</result>
            <result name="input">/WEB-INF/jsp/register.jsp</result>
        </action>
        <action name="mainPage" class="mainPage">
            <result name="SUCCESS">/WEB-INF/jsp/mainPage.jsp</result>
        </action>
        <action name="logOut" class="logOut">
            <result name="SUCCESS">/WEB-INF/jsp/logIn.jsp</result>
        </action>
        <action name="UpAction" class="UpAction">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
        </action>
    </package>
</struts>

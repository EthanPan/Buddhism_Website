<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="logIn" class="logAction">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="INPUT">logIn.jsp</result>
        </action>
        <action name="managementAction" class="manage" method="nextPage">
            <result name="SUCCESS" type="redirect">management.jsp</result>
        </action>
        <action name="managementAction" class="manage" method="previousPage">
            <result name="SUCCESS" type="redirect">management.jsp</result>
        </action>
        <action name="managementAction" class="manage">
            <result name="SUCCESS">management.jsp</result>
        </action>
        <action name="newPage" class="newArticle">
            <result name="SUCCESS">newArticle.jsp</result>
        </action>    
        <action name="articleAction" class="article">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="CANCEL"  type="redirect">managementAction.action</result>
        </action> 
        <action name="register" class="register">
            <result name="SUCCESS" type="redirect">managementAction.action</result>
            <result name="CANCEL"  type="redirect">managementAction.action</result>
            <result name="input">register.jsp</result>
        </action>
        <action name="mainPage" class="mainPage">
            <result name="SUCCESS">mainPage.jsp</result>
        </action>
    </package>
</struts>
